         authTab.close();\r\n                    }\r\n                    resolve();\r\n                });\r\n            }\r\n        });\r\n        authTab = popupWindow(url, '_blank', window, 1000, 700);\r\n    });\r\n};\r\n//# sourceMappingURL=authenticate.js.map","references":["/Users/TimMoreton/Code/tinacms/packages/react-tinacms-github/src/github-client/popupWindow.ts"],"map":"{\"version\":3,\"file\":\"authenticate.js\",\"sourceRoot\":\"\",\"sources\":[\"../../../../../../../src/github-client/authenticate.ts\"],\"names\":[],\"mappings\":\"AAAA;;;;;;;;;;;;;;;;EAgBE;AAEF,OAAO,WAAW,MAAM,eAAe,CAAA;AACvC,MAAM,CAAC,MAAM,oBAAoB,GAAG,kBAAkB,CAAA;AACtD,MAAM,CAAC,MAAM,YAAY,GAAG,CAC1B,QAAgB,EAChB,iBAAyB,EACzB,QAAgB,aAAa,EACd,EAAE;IACjB,MAAM,SAAS,GAAG,IAAI,CAAC,MAAM,EAAE;SAC5B,QAAQ,CAAC,EAAE,CAAC;SACZ,SAAS,CAAC,CAAC,CAAC,CAAA;IAEf,MAAM,GAAG,GAAG,kDAAkD,KAAK,cAAc,QAAQ,UAAU,SAAS,EAAE,CAAA;IAE9G,OAAO,IAAI,OAAO,CAAC,OAAO,CAAC,EAAE;QAC3B,aAAa;QACb,IAAI,OAA2B,CAAA;QAC/B,MAAM,CAAC,gBAAgB,CAAC,SAAS,EAAE,UAAS,CAAe;YACzD,IAAI,CAAC,CAAC,GAAG,IAAI,oBAAoB,EAAE;gBACjC,KAAK,CAAC,GAAG,iBAAiB,SAAS,CAAC,CAAC,QAAQ,UAAU,SAAS,EAAE,CAAC;qBAChE,IAAI,CAAC,QAAQ,CAAC,EAAE,CAAC,QAAQ,CAAC,IAAI,EAAE,CAAC;qBACjC,IAAI,CAAC,IAAI,CAAC,EAAE;oBACX,MAAM,KAAK,GAAG,IAAI,CAAC,WAAW,IAAI,IAAI,CAAA;oBACtC,IAAI,KAAK,EAAE;wBACT,gDAAgD;wBAChD,YAAY,CAAC,OAAO,CAAC,sBAAsB,EAAE,KAAK,CAAC,CAAA;qBACpD;yBAAM;wBACL,OAAO,CAAC,IAAI,CACV,oKAAoK,CACrK,CAAA;qBACF;oBACD,IAAI,OAAO,EAAE;wBACX,OAAO,CAAC,KAAK,EAAE,CAAA;qBAChB;oBACD,OAAO,EAAE,CAAA;gBACX,CAAC,CAAC,CAAA;aACL;QACH,CAAC,CAAC,CAAA;QACF,OAAO,GAAG,WAAW,CAAC,GAAG,EAAE,QAAQ,EAAE,MAAM,EAAE,IAAI,EAAE,GAAG,CAAC,CAAA;IACzD,CAAC,CAAC,CAAA;AACJ,CAAC,CAAA\"}","dts":{"name":"/Users/TimMoreton/Code/tinacms/packages/react-tinacms-github/src/github-client/authenticate.d.ts","writeByteOrderMark":false,"text":"/**\r\n\nCopyright 2019 Forestry.io Inc\r\n\nLicensed under the Apache License, Version 2.0 (the \"License\");\r\nyou may not use this file except in compliance with the License.\r